@model WMS.tbl_client

@{
    ViewBag.Title = "Create";
}


<form action="Create" method="POST" data-toggle="validator" role="form">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h5 class="text-primary">Add Client</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group  has-feedback">
            <label class="control-label text-primary col-md-2">Client Name *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="client_name" name="client_name" data-error="Bruh, that email address is invalid" required />
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Contact Person *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="contact_person" name="contact_person" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Phone No *</label>
            <div class="col-md-3">
                <input type="tel" class="form-control" id="phone" name="phone" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Email Id *</label>
            <div class="col-md-3">
                <input type="email" class="form-control" id="email" name="email" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Consumer Service Email Id *</label>
            <div class="col-md-3">
                <input type="email" class="form-control" id="consumer_email" name="consumer_email" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Claim Email Id *</label>
            <div class="col-md-3">
                <input type="text" class="form-control " id="claim_email" name="claim_email" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Fax No</label>
            <div class="col-md-3">
                <input type="tel" class="form-control" id="fax" name="fax" />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Address 1 *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="add_1" name="add_1" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Address 2</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="add_2" name="add_2" />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">City *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="city" name="city" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Province *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="province" name="province" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Country *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="country" name="country" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Zip Code *</label>
            <div class="col-md-3">
                <input type="text" class="form-control" id="zip" name="zip" required />
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="reset" value="Cancel" class="btn btn-primary" />
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
