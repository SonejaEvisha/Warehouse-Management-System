@model WMS.SKU

@{
    ViewBag.Title = "Details";
}

<h5 class="text-primary">SKU Details</h5>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt class="text-primary">
            Client
        </dt>

        <dd class="text-primary">
            @Model.client_name
        </dd>
        <dt class="text-primary">
            SKU
        </dt>

        <dd class="text-primary">
            @Model.SKU1
            <br />
            <img src="@Url.Content(Model.image_url)" alt="Image" height="90" width="90" />
        </dd>

        <dt class="text-primary">
            Description
        </dt>

        <dd class="text-primary">
            @Model.description
        </dd>

        <dt class="text-primary">
            Length
        </dt>

        <dd class="text-primary">
            @Model.length
        </dd>

        <dt class="text-primary">
            Width
        </dt>

        <dd class="text-primary">
            @Model.width
        </dd>

        <dt class="text-primary">
            Height
        </dt>

        <dd class="text-primary">
            @Model.height
        </dd>

        <dt class="text-primary">
            Rate
        </dt>

        <dd class="text-primary">
            @Model.rate
        </dd>

        <dt class="text-primary">
            Supplier
        </dt>

        <dd class="text-primary">
            @Model.supplier
        </dd>

        <dt class="text-primary">
            Cost
        </dt>

        <dd class="text-primary">
            @Model.cost
        </dd>

        <dt class="text-primary">
            Category
        </dt>

        <dd class="text-primary">
            @Model.category
        </dd>

        <dt class="text-primary">
            Notes
        </dt>

        <dd class="text-primary">
            @Model.notes
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SKU1 }) |
    @Html.ActionLink("Back to List", "Index")
</p>
