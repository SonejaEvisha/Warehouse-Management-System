@model WMS.SKU

@{
    ViewBag.Title = "Edit";
}

<form action="Edit" method="POST" enctype="multipart/form-data" data-toggle="validator" role="form">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="text-primary">Edit SKU</h5>
        <hr />


        <div class="form-group text-primary">
            <label class="control-label col-md-2">Client *</label>
            <div class="col-md-3">
                @Html.DropDownList("client_name", null, htmlAttributes: new { @class = "form-control", @value = @Model.client_name })
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">SKU *</label>
            <div class="col-md-3">
                <input type="text" id="SKU1" name="SKU1" class="form-control" value=@Model.SKU1 required />
                
                        <img src="@Url.Content(Session["Image"].ToString())" alt="Image" height="90" width="90" /><br /><br />
                        <input type="file" name="file" />
                   
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Description *</label>
            <div class="col-md-3">
                <textarea id="description" name="description" value=@Model.description class="form-control" required>@Model.description</textarea>
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Length</label>
            <div class="col-md-3">
                <input type="text" id="length" name="length" value=@Model.length class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Width</label>
            <div class="col-md-3">
                <input type="text" id="width" name="width" value=@Model.width class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Height</label>
            <div class="col-md-3">
                <input type="text" id="height" name="height" value=@Model.height class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Rate</label>
            <div class="col-md-3">
                <input type="text" id="rate" name="rate" value=@Model.rate class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Supplier</label>
            <div class="col-md-3">
                <input type="text" id="supplier" name="supplier" value=@Model.supplier class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Cost</label>
            <div class="col-md-3">
                <input type="text" id="cost" name="cost" value=@Model.cost class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Category</label>
            <div class="col-md-3">
                <input type="text" id="category" name="category" value=@Model.category class="form-control" />
            </div>
        </div>

        <div class="form-group text-primary">
            <label class="control-label col-md-2">Notes</label>
            <div class="col-md-3">
                <textarea id="notes" name="notes" value=@Model.notes class="form-control"></textarea>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
